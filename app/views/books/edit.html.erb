<h1>Editing Book</h1>

<%= form_with model: @book do |f| %>
  <% if @book.errors.any? %>
   errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>

  <h4>Title</h4>
  <%= f.text_field :title %>
  
